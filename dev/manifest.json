{
	"manifest_version": 2,
	"name": "Bee tools",
	"description": "Front-end development tools",
	"version": "0.0.1",
	"background": {
		"scrips": [
			"src/background.js",
			"src/require.js",
			"src/config.js",
			"src/image.js",
			"WebContent/background.js"
		],
		"page": "html/background.html"
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*", "*://*/*", "http://*/*.json*", "file:///*/*.json*"],
		//"run_at": "document_idle",
		"run_at": "document_end",
		"js": [
			"src/jquery.js",
			"src/content.js",
			"src/jsonview/workerFormatter.js",
			"WebContent/content.js"
		],
		"all_frames": true
	}],
	"options_page": "html/options.html",
	"chrome_url_overrides": {
		//"newtab": "html/blank.html"
	},
	"browser_action": {
		"default_icon": "icons/plugin_16.png",
		"default_popup": "html/popup.html",
		"default_title": ""
	},
	"web_accessible_resources": [
		"WebContent/jsonview.css",
		"WebContent/jsonview-core.css",
		"WebContent/content_error.css",
		"WebContent/options.png",
		"WebContent/close_icon.gif",
		"WebContent/error.gif"
	],
	"permissions": [
		"clipboardWrite",
		"management",
		"activeTab",
		"history",
		"background",
		"bookmarks",
		"cookies",
		"contentSettings",
		"contextMenus",
		"browsingData",
		"tabs",
		"notifications",
		"idle",
		"<all_urls>",
		"*://*/",
		"http://*/",
		"https://*/",
		"ftp://*/"
	],
	"icons": {
		"16": "icons/plugin_16.png",
		"48": "icons/plugin_48.png",
		"128": "icons/plugin_128.png"
	}
}